<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{> header}}
    <link rel="stylesheet" href="/styles.css">
    <title>{{blog.title}}</title>
    <style>
        .blog-cover-image {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 0 auto;
        }

        .blog-content {
            padding: 20px;
        }

        .card-text pre {
            white-space: pre-wrap;
            max-height: 400px;
            overflow-y: auto;
        }

        .author-info {
            display: flex;
            align-items: center;
            margin-top: 20px;
        }

        .author-info img {
            border-radius: 50%;
            width: 50px;
            height: 50px;
            margin-right: 10px;
        }

        .author-info .author-name {
            font-size: 1.2em;
        }

        .comment-form {
            margin-top: 30px;
        }

        .comment-form textarea {
            resize: vertical;
        }

        .comments-section {
            margin-top: 40px;
        }

        .comment {
            display: flex;
            align-items: flex-start;
            margin-bottom: 20px;
        }

        .comment img {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            margin-right: 10px;
        }

        .comment-content {
            background-color: #343a40;
            padding: 10px;
            border-radius: 5px;
            width: 100%;
        }

        .comment-content .comment-author {
            font-weight: bold;
            margin-bottom: 5px;
        }
    </style>
</head>

<body>
    {{> nav}}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card bg-dark text-white">
                    <img src="{{blog.coverImageURL}}" class="card-img-top blog-cover-image"
                        alt="Cover image of {{blog.title}}">
                    <div class="card-body blog-content">
                        <h2 class="card-title">{{blog.title}}</h2>
                        <div class="card-text">
                            <pre>{{blog.body}}</pre>
                        </div>
                        <div class="author-info">
                            <img src="{{blog.createdBy.profileImageURL}}"
                                alt="Profile image of {{blog.createdBy.fullname}}">
                            <span class="author-name">{{blog.createdBy.fullname}}</span>
                        </div>
                        <div class="comment-form">
                            {{#if user}}
                            <h4>Leave a Comment</h4>
                            <form action="/blog/comment/{{blog._id}}" method="POST">
                                <div class="form-group">
                                    <label for="commentBody">Comment</label>
                                    <textarea class="form-control bg-dark text-white" id="commentBody" name="content"
                                        rows="3" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Post Comment</button>
                                <div class="form-group">
                                    {{#if error}}
                                    <div class="alert alert-danger" role="alert">{{error}}</div>
                                    {{/if}}
                                </div>
                            </form>
                            {{else}}
                            <p>Please <a href="/user/signin">sign in</a> to leave a comment.</p>
                            {{/if}}
                        </div>
                        <div class="comments-section">
                            <h4>Comments ({{comments.length}})</h4>
                            {{#each comments}}
                            <div class="comment">
                                <img src="{{this.createdBy.profileImageURL}}"
                                    alt="Profile image of {{this.createdBy.fullname}}">
                                <div class="comment-content">
                                    <div class="comment-author">{{this.createdBy.fullname}}</div>
                                    <div class="comment-text">{{this.content}}</div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{> footer}}
    {{> script}}
</body>

</html>