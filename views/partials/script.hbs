<script>
    document.getElementById('commentForm').addEventListener('submit', async function (event) {
        event.preventDefault(); // Prevent default form submission
        const commentBody = document.getElementById('commentBody').value.trim(); // Trim whitespace
        if (commentBody.length < 1) {
            // If comment is empty, show error message
            document.getElementById('commentError').textContent = 'Please write at least one character.';
            document.getElementById('commentError').style.display = 'block';
        } else {
            // Otherwise, submit the form
            this.submit();
        }
    });
</script>